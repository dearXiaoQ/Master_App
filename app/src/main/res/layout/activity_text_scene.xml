<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/tv_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://gmri.com.cn/public/default/default/images/logo.png" />

    <EditText
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:onClick="download"
        android:layout_height="wrap_content"
        android:text="@string/download"/>
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content"
        android:text="@string/prompt_information"/>

    <Button android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Compression"
        android:id="@+id/btn_zip"/>

    <Button android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Decompression"
        android:id="@+id/btn_unzip"
        android:layout_below="@id/btn_zip"/>



</LinearLayout>
